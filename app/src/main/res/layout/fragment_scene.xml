<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewBackground1"
        android:layout_width="380dp"
        android:layout_height="120dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textViewNameScene"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/cardViewBackground1"
        app:layout_constraintEnd_toEndOf="@+id/cardViewBackground1"
        app:layout_constraintStart_toStartOf="@+id/cardViewBackground1"
        app:layout_constraintTop_toTopOf="@+id/cardViewBackground1" />

</androidx.constraintlayout.widget.ConstraintLayout>